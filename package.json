{
  "name": "audio-transcription-app",
  "version": "2.0.0",
  "description": "Audio transcription and analysis app with AI chat capabilities",
  "main": "main.js",
  "scripts": {
    "dev": "npm run build:css && electron .",
    "start": "npm run build:css && electron .",
    "build:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/output.css --watch",
    "build": "npm run build:css && electron-builder",
    "build:mac": "npm run build:css && electron-builder --mac",
    "build:win": "npm run build:css && electron-builder --win"
  },
  "keywords": [
    "electron",
    "transcription",
    "openai",
    "whisper"
  ],
  "author": "Patrick C. Freyer <freyer.patrick@bcg.com> (https://patrickfreyer.com)",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.3",
    "keytar": "^7.9.0",
    "openai": "^4.24.0"
  },
  "build": {
    "appId": "com.transcription.app",
    "productName": "Audio Transcription",
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "node_modules/keytar/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "node_modules/fluent-ffmpeg/**/*"
    ]
  }
}
