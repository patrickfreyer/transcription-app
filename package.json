{
  "name": "audio-transcription-app",
  "version": "1.3.0",
  "description": "Elegant audio transcription app using OpenAI Whisper API",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "test": "jest",
    "test:unit": "jest",
    "test:integration": "node test-ffmpeg.js && node test-transcription.js",
    "test:transcription": "node test-transcription.js",
    "test:ffmpeg": "node test-ffmpeg.js"
  },
  "keywords": [
    "electron",
    "transcription",
    "openai",
    "whisper"
  ],
  "author": "Patrick C. Freyer <freyer.patrick@bcg.com> (https://patrickfreyer.com)",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.3",
    "marked": "^16.4.1",
    "mermaid": "^11.12.0",
    "openai": "^4.24.0"
  },
  "build": {
    "appId": "com.transcription.app",
    "productName": "Audio Transcription",
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": null
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "node_modules/fluent-ffmpeg/**/*"
    ]
  }
}
